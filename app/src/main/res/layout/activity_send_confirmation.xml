<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SendConfirmationActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/warningBackground"
        android:layout_width="284dp"
        android:layout_height="198dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="4dp"
        android:background="#ccc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/uploadDisclaimer"
        android:layout_width="285dp"
        android:layout_height="70dp"
        android:text="By pressing the &quot;Allow&quot; button, you agree to having these photos uploaded to a remote storage device for analysis. (Scroll down to see more.)"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/warningBackground"
        app:layout_constraintTop_toTopOf="@+id/warningBackground" />

    <TextView
        android:id="@+id/redWarningText"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="THE IMAGES WILL BE PUBLICLY AVAILABLE!"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/warningBackground"
        app:layout_constraintEnd_toEndOf="@+id/warningBackground"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="@+id/warningBackground"
        app:layout_constraintTop_toTopOf="@+id/warningBackground"
        app:layout_constraintVertical_bias="0.398" />

    <Button
        android:id="@+id/allowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#005EA6"
        android:onClick="onClick"
        android:text="Allow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/denyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#AE0000"
        android:onClick="onClick"
        android:text="Deny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/allowBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>